# Server Configuration
NODE_ENV=development
PORT=4000
FRONTEND_URL=http://localhost:3000

# Database
DATABASE_URL=postgresql://thewove:thewove_dev_password@localhost:5432/thewove
DB_HOST=localhost
DB_PORT=5432
DB_NAME=thewove
DB_USER=thewove
DB_PASSWORD=thewove_dev_password

# Redis
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# Elasticsearch
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_NODE=http://localhost:9200

# S3/MinIO Storage
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=thewove
S3_SECRET_KEY=thewove_dev_password
S3_BUCKET=thewove-projects
S3_REGION=us-east-1

# Authentication (Auth0)
AUTH0_DOMAIN=your-domain.auth0.com
AUTH0_CLIENT_ID=your-client-id
AUTH0_CLIENT_SECRET=your-client-secret
AUTH0_AUDIENCE=https://api.thewove.app

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# AI Services
ANTHROPIC_API_KEY=your-anthropic-api-key
OPENAI_API_KEY=your-openai-api-key
AI_MAX_TOKENS=4096
AI_DEFAULT_MODEL=claude-3-5-sonnet-20241022

# Cloudflare (for deployment)
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token
CLOUDFLARE_ACCOUNT_ID=your-account-id
CLOUDFLARE_ZONE_ID=your-zone-id

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# Logging
LOG_LEVEL=debug
PRETTY_PRINT=true

# CORS
CORS_ORIGIN=http://localhost:3000

# File Upload Limits
MAX_FILE_SIZE=10485760
MAX_PROJECT_SIZE=104857600

# WebSocket
WS_HEARTBEAT_INTERVAL=30000
WS_TIMEOUT=60000

# Job Queue
QUEUE_CONCURRENCY=5
QUEUE_MAX_RETRIES=3
